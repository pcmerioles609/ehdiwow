<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtResDutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text = "DEVICE NAME" />
        <TextView
            android:id="@+id/txtResDutDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center"
            android:text = "DEVICE DESCRIPTION" />
        <TextView
            android:id="@+id/txtTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_info"
        android:layout_above="@+id/linear_action"
        android:scaleType="center"/>

    <ScrollView
        android:id="@+id/scroll_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_info"
        android:layout_above="@+id/linear_action"
        android:layout_weight="1"
        android:padding = "10dp" >

        <LinearLayout
            android:id="@+id/linear_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linear_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPassFail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="center"
            android:text = "PASS OR FAIL" />
        <Button
            android:id="@+id/btnOK"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_weight="1"
            android:text="OK"
            android:textStyle="bold"
            android:textSize="30sp"/>

    </LinearLayout>

</RelativeLayout>